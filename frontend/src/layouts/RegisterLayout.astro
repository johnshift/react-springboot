---
import BaseLayout from './BaseLayout.astro'
---
<BaseLayout>
	<main slot='body' class="flex flex-col h-screen md:justify-center md:items-center md:flex-row md:px-5 lg:px-48 hd:px-96">
		
		<article class="h-44 md:h-1/2 md:w-5/12 lg:flex-row hd:justify-end md:pl-10 lg:w-6/12 ">
			<div class='h-full p-5 flex lg:flex-col lg:justify-center items-center lg:items-start flex-wrap md:content-center'>

				<div class="text-7xl font-bold text-red-700 mb-5 md:mb-10 mr-5">
					<slot name='title' />
				</div>

				<div class='text-xl md:text-lg lg:text-2xl hd:text-3xl font-medium mb-5 md:mb-10 order-3 md:order-2 pl-3'>
					<slot name='subtitle' />
				</div>

				<div class='order-2 md:order-3'>
					<slot name='left-action' />
				</div>

			</div>
		</article>
		
		<section class="w-full md:w-7/12 md:py-5 lg:w-6/12 flex justify-center items-center lg:justify-start">
				<slot name="right" />
		</section>
		
	</main>
</BaseLayout>