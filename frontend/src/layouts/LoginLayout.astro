---
import BaseLayout from './BaseLayout.astro'
---
<BaseLayout>

	<script slot='head-script'>
		if (window.localStorage.getItem('authorization')) {
			window.location.replace('/');
		}
	</script>

	<main slot='body' class="flex flex-col h-screen justify-center items-center md:flex-row md:px-10 lg:px-56 hd:px-96">
		
		<article class="h-40 md:h-1/2 md:w-1/2 flex md:flex-row md:justify-end">
			<div class='h-full p-5 flex md:flex-col md:justify-center items-center md:items-start flex-wrap'>

				<div class="text-7xl font-bold text-red-700 mb-5 md:mb-10 mr-5">
					<slot name='title' />
				</div>

				<div class='text-xl lg:text-2xl hd:text-3xl font-medium mb-5 md:mb-10 order-3 md:order-2 pl-3'>
					<slot name='subtitle' />
				</div>

				<div class='order-2 md:order-3'>
					<slot name='left-action' />
				</div>

			</div>
		</article>
		
		<section class="w-full md:h-1/2 md:w-1/2 py-5 flex justify-center items-center md:justify-start">
				<slot name="right" />
		</section>
		
	</main>
</BaseLayout>