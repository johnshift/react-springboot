---
import { DEFAULT_PAGE_TITLE } from '../lib/constants'
import LandingLayout from '../layouts/LandingLayout.astro'
import DemoButton from '../components/login/DemoButton'
import LoginForm from '../components/login/LoginForm'
---

<LandingLayout title={ DEFAULT_PAGE_TITLE + ' Login' }>


	<div slot='hero' class='h-full p-5 flex flex-col justify-center lg:pl-20 '>

			<h1 class="text-7xl font-bold text-red-800 mb-5 md:mb-10 ">
				veils
			</h1>

			<h2 class='text-2xl md:text-3xl text-gray-600 font-medium mb-5 md:mb-10 '>
				Share your secrets anonymously
			</h2>

			<DemoButton client:idle/>
	</div>

	<div slot='form' class='flex justify-center items-center h-full'>
		
			<LoginForm client:load/>
	</div>


</LandingLayout>

