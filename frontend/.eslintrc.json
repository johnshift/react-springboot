{
	"plugins": [
		"use-encapsulation"
	],
  "extends": "next/core-web-vitals",
	"rules": {
		"no-restricted-imports": [
			"error",
			{
				"patterns": [
					"@mui/*/*/*",
					"!@mui/material/test-utils/*"
				]
			}
		],
		"use-encapsulation/prefer-custom-hooks": [
			"error",
			{
				"allow": [
					"useContext"
				]
			}
		]
	}
	
}
